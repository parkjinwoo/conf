<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Parkjinwoo">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d0d0d0" background="#0d0d0d"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#606060"/>
  <style name="CurrentLine" background="#303030"/>
  <style name="LineNumber" foreground="#606060"/>
  <style name="CurrentLineNumber" foreground="#606060" bold="true"/>
  <style name="SearchResult" background="151515"/>
  <style name="Parentheses" background="#303030" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#606060"/>
  <style name="Occurrences.Rename" background="#c0c0c0"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ac4040"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ac4040"/>
  <style name="String" foreground="#6fac24"/>
  <style name="Keyword" foreground="#ac40a8"/>
  <style name="Operator" foreground="#d0d0d0"/>
  <style name="Preprocessor" foreground="#188cb5"/>
  <style name="Label" foreground="#ba1820"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffac30"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#188cb5"/>
  <style name="VirtualMethod" foreground="#188cb5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e0e0e0"/>
  <style name="Local" foreground="#d0d0d0"/>
  <style name="Static" foreground="#d0d0d0"/>
  <style name="JsScopeVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsImportVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsGlobalVar" foreground="#d0d0d0" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#303030"/>

  <!-- comments -->
  <style name="Comment" foreground="#c0c0c0"/>
  <style name="DisabledCode" foreground="#c0c0c0"/>
  <style name="Doxygen.Comment" foreground="#d0d0d0"/>
  <style name="Doxygen.Tag" foreground="#c0c0c0"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#ac40a8"/>
  <style name="Binding" foreground="#ba1820"/>
  <style name="QmlExternalId" foreground="#188cb5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#188cb5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#ac40a8"/>
  <style name="DiffLocation" foreground="#188cb5"/>
  <style name="AddedLine" foreground="#6fac24"/>
  <style name="RemovedLine" foreground="#ffac30"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#ac40a8"/>
  <style name="DiffContextLine" foreground="#188cb5"/>
  <style name="DiffSourceLine" foreground="#6fac24"/>
  <style name="DiffSourceChar" foreground="#ffac30" background="#151515"/>
  <style name="DiffDestLine" foreground="#6fac24"/>
  <style name="DiffDestChar" foreground="#ffac30" background="#151515"/>
</style-scheme>
